// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullname  String?
  birthdate String?
  nickname  String   @unique
  imageUrl  String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  books     Book[]


}

model Book {
  id          String     @id @default(uuid())
  title       String
  resume      String?
  year        Int
  pages       Int?
  edition     Int?
  value       Float
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  authorId    String?
  author      Author?    @relation(fields: [authorId], references: [id])
  genres      Genres[]
  publisherId String?
  publisher   Publisher? @relation(fields: [publisherId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  users       User[]

  @@unique([title, year])
}

model Author {
  id    String @id @default(uuid())
  name  String @unique
  books Book[]
}

model Genres {
  id    String @id @default(uuid())
  name  String @unique
  books Book[]
}

model Publisher {
  id    String @id @default(uuid())
  name  String @unique
  books Book[]
}
